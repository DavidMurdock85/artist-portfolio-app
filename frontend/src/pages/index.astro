---
import Layout from "../layouts/Layout.astro";
import { fetchHelloWorld } from "../services/fetchService";

const message = await fetchHelloWorld();
---

<Layout title="Home">
  <main class="mx-auto p-4 max-w-4xl text-white text-lg leading-6">
    {message}
    <div class="flex justify-center">
      <img height="800px" width="1000px" src="./home-image.jpeg" class="border border-slate-500" />
    </div>
  </main>
</Layout>
