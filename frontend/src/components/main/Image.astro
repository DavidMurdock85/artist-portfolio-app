--- 
// Image.astro
export interface Props {
  src: string;
  alt: string;
  name: string;
  description: string;
}

const { src, alt, name, description } = Astro.props;
---

<div class="w-64 rounded-lg card">
  <img src={src} alt={alt} class="w-full h-full object-cover" />
  <div class="p-4">
    <h3 class="text-lg font-semibold">{name}</h3>
    <p class="text-gray-600">{description}</p>
  </div>
</div>